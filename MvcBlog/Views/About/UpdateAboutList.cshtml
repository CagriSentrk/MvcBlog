@model IEnumerable<EntitiyLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <div class="row">

            <div class="col-md-12">

                <div class="card card-primary">

                    <div class="card-header">

                        <h3 class="card-title">Hakkımızda sayfasının düzenlenmesi</h3>

                        <div class="card-tools">

                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                                <i class="fas fa-minus"></i>

                            </button>

                        </div>

                    </div>
                    @using (Html.BeginForm("UpdateAbout","About",FormMethod.Post))
            {

           
                <div class="card-body">
                    @foreach (var item in Model)
                    {

                        <div class="form-group">

                            <label for="inputName">ID</label>

                            <input type="text" class="form-control" value="@item.AboutID" name="AboutID" readonly="true">

                        </div>

                        <div class="form-group">

                            <label for="inputName">Görsel 1</label>

                            <input type="text" class="form-control" value="@item.AboutImage1" name="AboutImage1">

                        </div>
                        <div class="form-group">

                            <label for="inputName">Görsel 2</label>

                            <input type="text" class="form-control" value="@item.AboutImage2" name="AboutImage2">

                        </div>

                        <div class="form-group">

                            <label for="inputDescription">Hakkımızda 1</label>

                            <textarea name="AboutContent" class="form-control" rows="4">@item.AboutContent</textarea>

                        </div>
                        <div class="form-group">

                            <label for="inputDescription">Hakkımızda 2</label>

                            <textarea name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>

                        </div>


                    }
                    <button class="btn btn-success">kaydet</button>
                </div>
                    }
                </div>

                <!-- /.card -->

            </div>



        </div>



    </section>

</body>

</html>


