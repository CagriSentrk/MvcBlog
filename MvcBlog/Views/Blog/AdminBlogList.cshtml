@model IEnumerable<EntitiyLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th> 


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogDate.ToShortDateString()</td>
            <td><a class="btn btn-danger" href="/Blog/DeleteBlog/@item.BlogID">Sil</a></td>
            <td><a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-dark">Detaylar</a></td>
            <td><a href="/Blog/GetCommentByBlog/@item.BlogID" class="btn btn-default">Yorumlar</a></td>

        </tr>


    }
    <td><a href="/Blog/AddNewBlog" class="btn btn-outline-primary">Yeni Blog Ekle</a></td>





</table>

