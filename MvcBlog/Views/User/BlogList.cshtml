@model IEnumerable<EntitiyLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
    var bloglist = Model.Count();

}

<h2>BlogList</h2>

@{string p = "";}
@{string color = "";}
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Kategori Listesi</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 10%">

                                ID

                            </th>

                            <th style="width: 25%">

                                Blog Başlık

                            </th>
                           


                            <th>
                                Beğeni Durumu

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            if (item.BlogRating >=80 && item.BlogRating<101)
                            {
                                color = "badge badge-success";
                                p = "Çok başarılı";
                            }

                            if (item.BlogRating >= 70 && item.BlogRating < 80)
                            {
                                color= "badge badge-secondary";

                                p = "başarılı";
                            }
                            if (item.BlogRating>=60 &&item.BlogRating < 70)
                            {
                                color = "badge badge-warning";
                                p = "Orta düzey";

                            }
                            if (item.BlogRating<60)
                            {
                                color = "badge badge-danger";
                                p = "Başarısız";

                            }

                            <tr>

                                <td>

                                    @item.BlogID
                                          
                                </td>

                                <td>

                                    <a>
                                        @item.BlogTitle
                                    

                                    </a>

                                    <br />
                                </td>



                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                       <div class="progress-bar bg-gradient-orange" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="100" style="width:  @item.BlogRating%">

                                        </div>
                       

                                    </div>

                                    <small>

                                        Aldığı puan:@item.BlogRating<br />
                                      

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="@color"></span>

                                </td>

                                <td class="project-actions text-right">



                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Comment/CommentsByBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                    yorumlar

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>
                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <h3>Toplam blog sayısı:@bloglist</h3>

    <a href="/User/AddNewBlog" class="btn btn-succes"style="background-color:darkorange">Yeni Blog Yaz</a>
</body>

</html>